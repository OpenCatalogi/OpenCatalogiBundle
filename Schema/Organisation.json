{
  "title": "Organisation",
  "$id": "https://opencatalogi.nl/oc.organisation.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "version": "0.1.0",
  "type": "object",
  "description": "extension of the publiccode standard ",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "logo": {
      "type": "string",
      "format": "uri",
      "description": "The logo of this organisation"
    },
    "supports": {
      "type": "array",
      "uniqueItems": true,
      "description": "A list of  components supported by this organisation",
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "owns": {
      "type": "array",
      "uniqueItems": true,
      "description": "A list of  components supported by this organisation",
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "uses": {
      "type": "array",
      "uniqueItems": true,
      "description": "A list of  components supported by this organisation",
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "token": {
      "type": "string",
      "description": "An optional NL-Design token that contains the organisations style"
    },
    "github": {
      "type": "string",
      "format": "url",
      "description": "A link the the organisations github "
    },
    "gitlab": {
      "type": "string",
      "format": "url",
      "description": "A link to the organisations gitlab"
    },
    "website": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "public",
        "private",
        "unkown"
      ],
      "example": "public",
      "description": "The type of this organisation"
    },
    "catalogusAPI": {
      "type": "string",
      "format": "uri",
      "nullable": true
    }
  }
}
