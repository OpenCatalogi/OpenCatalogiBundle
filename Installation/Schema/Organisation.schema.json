{
  "title": "Organisation",
  "$id": "https://opencatalogi.nl/oc.organisation.schema.json",
  "$schema": "https://docs.commongateway.nl/schemas/Entity.schema.json",
  "version": "0.1.1",
  "type": "object",
  "description": "extension of the publiccode standard ",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "logo": {
      "type": "string",
      "format": "uri",
      "description": "The logo of this organisation"
    },
    "supports": {
      "type": "array",
      "uniqueItems": true,
      "description": "A list of components supported by this organisation",
      "items": {
        "$ref": "https://opencatalogi.nl/oc.component.schema.json"
      }
    },
    "owns": {
      "type": "array",
      "uniqueItems": true,
      "description": "A list of components owned by this organisation",
      "items": {
        "$ref": "https://opencatalogi.nl/oc.component.schema.json"
      }
    },
    "uses": {
      "type": "array",
      "uniqueItems": true,
      "description": "A list of components used by this organisation",
      "items": {
        "$ref": "https://opencatalogi.nl/oc.component.schema.json"
      },
      "inversedBy": "usedBy"
    },
    "members": {
      "type": "array",
      "uniqueItems": true,
      "description": "A list of organizations related to this organization",
      "items": {
        "$ref": "https://opencatalogi.nl/oc.organisation.schema.json"
      }
    },
    "token": {
      "type": "string",
      "description": "An optional NL-Design token that contains the organisations style"
    },
    "github": {
      "type": "string",
      "format": "url",
      "description": "A link the the organisations github "
    },
    "gitlab": {
      "type": "string",
      "format": "url",
      "description": "A link to the organisations gitlab"
    },
    "website": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "public",
        "private",
        "unkown"
      ],
      "example": "public",
      "description": "The type of this organisation"
    },
    "catalogus": {
      "$ref": "https://opencatalogi.nl/oc.catalogus.schema.json"
    }
  }
}
